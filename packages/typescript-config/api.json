{
    "compilerOptions": {
      "incremental": true,
      "target": "ES2020",
      "baseUrl": "src",
      "rootDirs": [
        "src",
        "tests"
      ],
      "module": "ES2020",
      "moduleResolution": "Node",
      "paths": {
        "../*": [
          "*"
        ]
      },
      "types": [
        "node"
      ],
      "strict": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "outDir": "dist",
      "removeComments": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    }
  }